            var $this = $(this);
            var id = $(this).attr('id');

            if (clickedBoxes.includes(id)) {
                alert("Can't click this box!");
            }
            else {
                clickedBoxes.push(id);

                $this.css({
                    'background-color': 'green'
                });
                alert($this.text());
                alert(id);
            }
        });
    });
</script>


